<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="15dp">
    <Button
        android:id="@+id/Red_button"
        android:onClick="function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Red"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/red_view"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:layout_above="@+id/Blue_button"
        android:layout_toEndOf="@+id/blue_view"
        android:layout_alignLeft="@+id/blue_view"
        android:layout_toRightOf="@+id/blue_view"
        android:layout_alignStart="@+id/blue_view" />

    <Button
        android:id="@+id/Blue_button"
        android:onClick="function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Blue"
        android:layout_below="@+id/Red_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/blue_view"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:layout_above="@+id/Green_button"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/Blue_button"
        android:layout_toRightOf="@+id/Blue_button"
        android:text="" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="function"
        android:text="@string/Green"
        android:layout_below="@+id/Blue_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Green_button" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:id="@+id/green_view"
        android:layout_alignBaseline="@+id/Green_button"
        android:layout_alignBottom="@+id/Green_button"
        android:layout_alignLeft="@+id/blue_view"
        android:layout_alignStart="@+id/blue_view" />
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/Reset"
        android:onClick="reset"/>

</RelativeLayout>
